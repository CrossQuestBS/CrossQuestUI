<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="1000" d:DesignHeight="600"
             xmlns:vm="clr-namespace:CrossQuestUI.ViewModels"
             x:DataType="vm:InstancePageViewModel"
             Foreground="White"
             Background="rgb(20, 20, 20)"
             Theme=""
             x:Class="CrossQuestUI.Views.InstancePageView">
    <Design.DataContext>
        <vm:InstancePageViewModel />
    </Design.DataContext>

    <DockPanel LastChildFill="True">
        <Border Background="rgb(62,62,62)" Margin="10 10 10 0 " Padding="15 10" CornerRadius="4" Height="50"
                BorderBrush="Black" BorderThickness="1"
                DockPanel.Dock="Top">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" VerticalAlignment="Center" Spacing="10">
                <Button Command="{Binding GoBackCommand}" Padding="10 5">Go back</Button>
                <TextBlock FontSize="18" VerticalAlignment="Center" Text="{Binding ModdingInstance.Version}"></TextBlock>
            </StackPanel>
        </Border>
        <Border Width="300" Background="rgb(20,20,20)" BorderBrush="rgb(40,40,40)" BorderThickness="1" Margin="10"
                CornerRadius="10" DockPanel.Dock="Right">
            <DockPanel LastChildFill="True">
                <Border DockPanel.Dock="Top" Height="300">
                    <StackPanel Margin="10" Spacing="5">
                        <StackPanel.Styles>
                            <Style Selector="TextBlock.Verified">
                                <Setter Property="Background" Value="#2A452A"></Setter>
                            </Style>
                            <Style Selector="TextBlock.Invalid">
                                <Setter Property="Background" Value="#452A2A"></Setter>
                            </Style>
                            <Style Selector="Border.Verified">
                                <Setter Property="BorderBrush" Value="#92ED92"></Setter>
                            </Style>
                            <Style Selector="Border.Invalid">
                                <Setter Property="BorderBrush" Value="#ED9294"></Setter>
                            </Style>
                        </StackPanel.Styles>
                        <Border CornerRadius="3" BorderThickness="2" Classes.Verified="false" Classes.Invalid="true" MaxWidth="600">
                            <TextBlock VerticalAlignment="Center"
                                       TextAlignment="Center"
                                       FontSize="16"
                                       Padding="0 5"
                                       Classes.Verified="false"
                                       Classes.Invalid="true"
                                       Text="Requires compilation"
                                       TextWrapping="Wrap" />
                        </Border>
                        <Border CornerRadius="3" Margin="0 10" BorderThickness="2" Classes.Verified="true" Classes.Invalid="false" MaxWidth="600">
                            <TextBlock VerticalAlignment="Center"
                                       TextAlignment="Center"
                                       FontSize="16"
                                       Padding="0 5"
                                       Classes.Verified="true"
                                       Classes.Invalid="false"
                                       Text="Quest Connected"
                                       TextWrapping="Wrap" />
                        </Border>
                    </StackPanel>
                </Border>
                <Border DockPanel.Dock="Bottom" Padding="10">
                    <StackPanel VerticalAlignment="Bottom" Spacing="10" Margin="10 20">
                        <Button Foreground="White" Padding="20 10" Background="rgb(0, 100, 200)" VerticalAlignment="Bottom"
                                 HorizontalContentAlignment="Center" HorizontalAlignment="Stretch">
                            Update mods
                        </Button>
                        <Button Foreground="White" Padding="20 10" Background="rgb(0, 100, 200)" VerticalAlignment="Bottom"
                                HorizontalContentAlignment="Center" HorizontalAlignment="Stretch" Command="{Binding CompileCommand}">
                            Compile
                        </Button>
                        <Button Foreground="White" Padding="20 10" Background="rgb(0, 100, 200)" VerticalAlignment="Bottom"
                                HorizontalContentAlignment="Center" HorizontalAlignment="Stretch">
                            Install Modded
                        </Button>
                    </StackPanel>
                </Border>
            </DockPanel>
        </Border>
        <Border Background="rgb(20,20,20)" BorderBrush="rgb(40,40,40)" BorderThickness="1" Margin="10" Padding="10 20" CornerRadius="4" Height="200"
                DockPanel.Dock="Bottom">
            <StackPanel HorizontalAlignment="Left" VerticalAlignment="Top" Spacing="10">
                <TextBlock FontSize="16" Margin="0 10" VerticalAlignment="Top" Text="Modding Status"></TextBlock>
                <TextBlock Text="{Binding ModdingStatus}"></TextBlock>
            </StackPanel>
        </Border>
        <Border Margin="10" Padding="15" BorderBrush="rgb(40,40,40)" BorderThickness="1" CornerRadius="10">
            <StackPanel Margin="0 0">
                <ScrollViewer>
                    <StackPanel Margin="0 10 0 0 ">
                        <TextBlock FontSize="16" Margin="0 10">Installed mods</TextBlock>
                        <ItemsRepeater IsEnabled="{Binding SelectedMods.Count}" ItemsSource="{Binding SelectedMods}">
                            <ItemsRepeater.ItemTemplate>
                                <DataTemplate>
                                    <Border BorderBrush="rgb(40,40,40)" Background="rgb(25,25,25)" BorderThickness="1"
                                            Padding="10 5" Margin="0 0 0 10 " CornerRadius="4">
                                        <StackPanel Orientation="Horizontal" Spacing="20">
                                            <CheckBox IsVisible="{Binding Required}" IsEnabled="False" IsChecked="True"
                                                      Content="{Binding Name}">
                                            </CheckBox>
                                            <CheckBox IsVisible="{Binding !Required}" IsEnabled="False"
                                                      Content="{Binding Name}" IsChecked="True">
                                            </CheckBox>
                                            <TextBlock Foreground="rgb(180, 180, 180)" VerticalAlignment="Center"
                                                       Text="{Binding Description}">
                                            </TextBlock>
                                        </StackPanel>
                                    </Border>
                                </DataTemplate>
                            </ItemsRepeater.ItemTemplate>
                        </ItemsRepeater>
                    </StackPanel>
                </ScrollViewer>
            </StackPanel>
        </Border>
    </DockPanel>
</UserControl>